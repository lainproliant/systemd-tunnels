[Unit]
Description=Setup a secure forward tunnel to %I
After=network.target

[Service]
EnvironmentFile=/etc/default/ssh-forward-tunnel@%i
User=${RUNAS_USER}
ExecStart=/usr/bin/ssh -NT -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -L ${LOCAL_PORT}:${REMOTE_HOST}:${REMOTE_PORT} ${TUSER}@${TARGET}
# Restart every >2 seconds to avoid StartLimitInterval failure
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target
